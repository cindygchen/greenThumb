{{#section 'head'}}
  <link rel="stylesheet" href="assets/css/registrationStyle.css"> 
{{/section}} 

<div id="vegetables">

  <div class="close">

    <form action="/registration" method="POST" class="animated slideInDown">
      <h2>Sign Up</h2>
      {{#if errors}} 
        {{#each errors}} 
         <div class="notification is-danger"> {{msg}} </div>
        {{/each}} 
      {{/if}}
      <p>
        <label for="Username" class="floatLabel">Username</label>
        <input id="Username" name="username" type="text">
      </p>
      <p>
        <label for="Email" class="floatLabel">Email</label>
        <input id="Email" name="email" type="text">
      </p>
      <p>
        <label for="password" class="floatLabel">Password</label>
        <input id="password" name="password" type="password">
        <span>Enter a password longer than 8 characters</span>
      </p>
      <p>
        <label for="confirmpassword" class="floatLabel">Confirm Password</label>
        <input id="confirm_password" name="confirmPassword" type="password">
        <span>Your passwords do not match</span>
      </p>
      <p>
        <input type="submit" value="Create My Account" id="submit">
      </p>
    </form>

  </div>

  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

  <script type="text/javascript" src="assets/js/logic.js"></script>

</div>