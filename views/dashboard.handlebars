<!-- Search bar & background -->
<section class="hero is-medium is-dark">
  <div class="hero-body" id="index">
    <div class="container">
      {{!--<figure class="image">
      <img src="../assets/images/logo.png" height="100px" width="100px">
      </figure>--}}
      <div class="column is-half is-offset-one-quarter">
        <div class="control">
          <form action="/search" method="GET">
            <button class="button is-success is-medium has-addons" style="float: right">Go</button>
            <div style="overflow: hidden; padding-right: .5em;">
              <input class="input is-medium" type="text" placeholder="What do you want to grow?" name="plantName">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<br> 

<div class="container">
  <div class="column">
    <h1 class="title is-3">Favorites</h1>
  </div>
</div>


<div class="container section">
  <div class="columns is-multiline">
    {{!--{{#each fav}}--}}
    <div class="column is-one-third" >
      <div class="tile is-ancestor">
          <div class="tile is-parent">
            <article class="tile is-child box">
              <a class="title is-3" href={{fav name}}>
                <figure class="image resultImage">
                <img src={{fav image}}>
                </figure>
                {{name}}
              </a>
            </article>
          </div>
      </div>
    </div>
    {{!--{{/each fav}}--}}
  </div>
</div>



